{
  "env": {
    "node": true,
    "es2021": true,
    "jest": true,
    "shelljs": true,
    "__dirname": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:editorconfig/all",
    "plugin:node/recommended-module",
    "plugin:prettier/recommended",
    "plugin:security/recommended"
  ],
  "plugins": ["editorconfig", "prettier"],
  "overrides": [],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "prettier/prettier": "error",
    "quotes": ["error", "single"],
    "semi": ["error", "never"]
  }
}
